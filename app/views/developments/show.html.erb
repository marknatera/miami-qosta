    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1">
          <h1>Floorplans Coming Soon</h1>
          <hr>
        </div>
      </div>
    </div>
  </section>
<% else %>
  <section class="development-area" style="background-image: url(<%= @development.area_and_floorplan_image %>)">
    <div class="area-floorplan">
      <ul>
        <li>view area <%= link_to image_tag('arrow-right-white.svg'), @development.area_url, target: '_blank' %></li>
        <% if @development.floorplan_pdf.blank? %>
          <li>floorplans coming soon</li>
        <% else %>
          <li>see floorplans <%= link_to image_tag('arrow-right-white.svg'), @development.floorplan_pdf.url, target: '_blank' %></li>
        <% end %>
      </ul>
    </div>
  </section>
<% end %>



<section class="next-development">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <% if @development.next == nil %>
          <% if @development.previous == nil %>
          <div style="display:none;"></div>
          <% else %>
            <h3>PREVIOUS PROJECT</h3>
            <hr>
            <h1><%= @development.previous.name %></h1>
            <%= link_to image_tag('arrow-right-gray.svg', style: 'transform: rotate(180deg);'), @development.previous %>
          <% end %>
        <% else %>
          <h3>NEXT PROJECT</h3>
          <hr>
          <h1><%= @development.next.name %></h1>
          <%= link_to image_tag('arrow-right-gray.svg'), @development.next %>
        <% end %>
      </div>
    </div>
  </div>
</section>
