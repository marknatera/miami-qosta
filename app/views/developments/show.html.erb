<section class="development-featured" style="background-image: url(<%= @development.featured_image %>)">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <h1><%= @development.name %></h1>
        <hr>
      </div>
    </div>
  </div>
  <a href="#decription"><%= image_tag 'arrow-down-white.svg', class: 'scroll-down' %></a>
</section>
<section class="development-content" id="decription">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <h1><%= @development.address %></h1>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1">
          <div class="col-sm-6">
            <%= raw @development.description %>
          </div>
          <div class="col-xs-12 col-sm-5 col-sm-offset-1">
            <p><strong><%= @development.name %></strong></p>
            <%= raw @development.building_info %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="development-amenities" style="background-image: url(<%= @development.amenities_image %>)">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-7">
      </div>
      <div class="col-md-5">
        <div class="row">
          <div class="col-md-10">
            <h1>Building Ameneties</h1>
            <ul>
              <% @development.amenities.limit(7).each do |n| %>
                <li><%= n.name %></li>
                <hr>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>




  <section class="development-services" style="background-image: url(<%= @development.services_image %>)">
    <div class="container-fluid">
       <div class="row">
         <div class="col-xs-12 col-sm-5 col-sm-offset-1">
           <h1>Building Services</h1>
           <ul>
             <% @development.building_services.limit(7).each do |n| %>
              <% if n.name? %>
                <li><%= n.name %></li>
              <% else n.name.blank? %>
                <li>Coming Soon</li>
              <% end %>
               <hr>
             <% end %>
           </ul>
         </div>
       </div>
    </div>
  </section>



<section class="development-residence" style="background-image: url(<%= @development.residence_image %>)">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-7">
      </div>
      <div class="col-md-5">
        <div class="row">
          <div class="col-md-10">
            <h1>RESIDENCES</h1>
            <ul>
              <% @development.residence_types.each do |n| %>
                <li><%= n.name %></li>
              <% end %>
            </ul>
            <ul>
              <% @development.residence_features.limit(4).each do |n| %>
                <li><%= n.name %></li>
                <hr>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- masterslider -->
<div class="master-slider ms-skin-default" id="masterslider">
    <!-- new slide -->
    <% @development.galleries.each do |n| %>
      <% n.pictures.each do |p| %>
        <div class="ms-slide">
          <!-- slide background -->
          <%= image_tag 'https://s3.amazonaws.com/miami-qosta/slider-images/blank.gif', data: {src: p.image.url(:retina)} %>
          <!-- slide text layer -->
          <div class="ms-layer ms-caption" style="top:10px; left:30px;">
              <%= p.description %>
          </div>
        </div>
    <% end %>
  <% end %>
    <!-- end of slide -->
</div>
<!-- end of masterslider -->
  <% if @development.payment_schedule.blank? %>
    <section class="development-payment">
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-12 col-sm-10 col-sm-offset-1">
            <h1>PAYMENT SCHEDULE</h1>
            <hr>
            <ul>
              <li>Payment Schedule coming soon</li>
            </ul>
          </div>
        </div>
      </div>
    </section>
  <% else %>
    <section class="development-payment">
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-12 col-sm-10 col-sm-offset-1">
            <h1>PAYMENT SCHEDULE</h1>
            <hr>
            <%= raw @development.payment_schedule %>
          </div>
        </div>
      </div>
    </section>
  <% end %>
