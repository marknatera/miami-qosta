<% if @development.galleries.count == 0 %>
  <section class="development-no-gallery">
    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1">
          <h1>Gallery Coming Soon</h1>
          <hr>
        </div>
      </div>
    </div>
  </section>
<% else %>
  <section>
    <!-- masterslider -->
    <div class="master-slider ms-skin-default" id="masterslider">
        <!-- new slide -->
        <% @development.galleries.each do |n| %>
          <% n.pictures.each do |p| %>
            <div class="ms-slide">
              <!-- slide background -->
              <%= image_tag 'https://s3.amazonaws.com/miami-qosta/slider-images/blank.gif', data: {src: p.image.url(:retina)} %>
              <!-- slide text layer -->
              <div class="ms-layer ms-caption" style="top:10px; left:30px;">
                  <%= p.description %>
              </div>
            </div>
          <% end %>
        <% end %>
        <!-- end of slide -->
    </div>
    <!-- end of masterslider -->
  </section>
<% end %>


